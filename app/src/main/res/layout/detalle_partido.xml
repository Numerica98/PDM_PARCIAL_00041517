<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_titulo_detalle_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTIDO #"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_detalle_nombre_equipo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del equipo 1:"/>

    <TextView
        android:id="@+id/tv_nombre_equipo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo #1"/>

    <TextView
        android:id="@+id/tv_detalle_nombre_equipo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del equipo 2:"/>

    <TextView
        android:id="@+id/tv_nombre_equipo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo #2"/>

    <TextView
        android:id="@+id/tv_detalle_puntos_equipo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos del equipo 1:"/>

    <TextView
        android:id="@+id/tv_puntos_equipo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_detalle_puntos_equipo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos del equipo 2:"/>

    <TextView
        android:id="@+id/tv_puntos_equipo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>

    <TextView
        android:id="@+id/tv_detalle_fecha_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del partido:"/>

    <TextView
        android:id="@+id/tv_fecha_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03/06/2019"/>

    <TextView
        android:id="@+id/tv_detalle_hora_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora del partido:"/>

    <TextView
        android:id="@+id/tv_hora_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00"/>

    <TextView
        android:id="@+id/tv_detalle_nombre_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del ganador:"/>

    <TextView
        android:id="@+id/tv_nombre_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipo #"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_nombre_equipo1_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipo_1"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=" VS"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_nombre_equipo2_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipo_2"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="italic"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detalle_nombre_equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="*Nombre del Equipo 1:"/>

            <TextView
                android:id="@+id/tv_nombre_equipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipo #1"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_detalle_nombre_equipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="*Nombre del Equipo 2:"/>

            <TextView
                android:id="@+id/tv_nombre_equipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="Equipo #2"/>

            <TextView
                android:id="@+id/tv_detalle_puntos_equipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="*Puntos del Equipo #1: "/>

            <TextView
                android:id="@+id/tv_puntos_equipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_detalle_puntos_equipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:text="*Puntos del Equipo #2: "/>

            <TextView
                android:id="@+id/tv_puntos_equipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="0"/>

            <TextView
                android:id="@+id/tv_detalle_fecha_partido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="*Fecha del partido: "/>

            <TextView
                android:id="@+id/tv_fecha_partido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="05/06/2019"/>

            <TextView
                android:id="@+id/tv_detalle_hora_partido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="*Hora del partido:"/>

            <TextView
                android:id="@+id/tv_hora_partido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="9:00"/>

            <TextView
                android:id="@+id/tv_detalle_equipo_ganador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="*Nombre del equipo ganador:"/>

            <TextView
                android:id="@+id/tv_nombre_equipo_ganador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:text="Equipo #"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>